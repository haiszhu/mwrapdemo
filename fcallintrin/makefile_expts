
include ../make.inc

ARCH ?= arm

# Make sure the CC and FC compilers were built with the same glibc library
# g77 will work fine on most systems

default: mexfile

OBJS = ckernels_expts.o kernels_expts.o 

ifeq ($(ARCH), arm)
  CFLAGS += -march=armv8-a
else ifeq ($(ARCH), x86)
  CFLAGS += -mavx512f
endif

ifeq ($(ARCH), arm)

ckernels_expts_arm.o : ckernels_expts_arm.c   
	$(CC) -fPIC $(CFLAGS) -c ckernels_expts_arm.c

kernels_expts_arm.o : kernels_expts_arm.f 
	$(FC) -fPIC $(FFLAGS) -c kernels_expts_arm.f 

gateway_expts.c: demo_expts_arm.mw makefile_expts
	$(MWRAP) -c99complex -i8 -mex gateway_expts -mb -list demo_expts_arm.mw
	$(MWRAP) -c99complex -i8 -mex gateway_expts -c gateway_expts.c demo_expts_arm.mw

mexfile: gateway_expts.c ckernels_expts_arm.o kernels_expts_arm.o makefile_expts
	$(MEX) gateway_expts.c ckernels_expts_arm.o kernels_expts_arm.o -largeArrayDims $(MFLAGS) -lgfortran -lm -lstdc++

else ifeq ($(ARCH), x86)

ckernels_expts.o : ckernels_expts.c   
	$(CC) -fPIC $(CFLAGS) -c ckernels_expts.c

kernels_expts.o : kernels_expts.f 
	$(FC) -fPIC $(FFLAGS) -c kernels_expts.f 

gateway_expts.c: demo_expts.mw makefile_expts
	$(MWRAP) -c99complex -i8 -mex gateway_expts -mb -list demo_expts.mw
	$(MWRAP) -c99complex -i8 -mex gateway_expts -c gateway_expts.c demo_expts.mw

mexfile: gateway_expts.c ckernels_expts.o kernels_expts.o makefile_expts
	$(MEX) gateway_expts.c ckernels_expts.o kernels_expts.o -largeArrayDims $(MFLAGS) -lgfortran -lm -lstdc++

endif

# Default Targets for Cleaning up the Environment
clean :
	rm *.o
	rm gateway_expts.mex*
