% --------------------------------------------------------------------------
@function A=clap3ddlpmat_mex(n,r0,m,r,A)
n3 = n*3;
m3 = m*3;
nm = n*m;
r0 = r0(:); r = r(:); A = A(:);
# FORTRAN clap3ddlpmat(int[1] n, double[n3] r0, int[1] m, double[m3] r, inout double[nm] A);
A = reshape(A,n,m); 
end

